<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_green_light"/>
            <corners android:radius="20dp"/>
            <stroke android:width="2dp" android:color="@android:color/holo_green_light"/>
            <gradient android:angle="-90" android:startColor="@android:color/holo_green_light" android:endColor="@android:color/holo_green_dark"/>
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp"/>
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_green_light"/>
            <corners android:radius="20dp"/>
            <stroke android:width="2dp" android:color="@android:color/holo_green_dark"/>
        </shape>
    </item>

</selector>