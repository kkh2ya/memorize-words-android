<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffd500"/>
            <corners android:radius="20dp"/>
            <stroke android:width="2dp" android:color="#e6ff00"/>
            <gradient android:angle="-90" android:startColor="#e6ff00" android:endColor="#ffd500"/>
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp"/>
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#e6ff00"/>
            <corners android:radius="20dp"/>
            <stroke android:width="2dp" android:color="#ffd500"/>
        </shape>
    </item>

</selector>